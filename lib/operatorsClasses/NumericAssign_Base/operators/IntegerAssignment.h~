#ifndef __KLEE_SEMU_GENMU_operatorClasses__IntegerAssignment__
#define __KLEE_SEMU_GENMU_operatorClasses__IntegerAssignment__

/**
 * -==== IntegerAssignment.h
 *
 *                LLGenMu LLVM Mutation Tool
 *
 * This file is distributed under the University of Illinois Open Source
 * License. See LICENSE.TXT for details. 
 *  
 * \brief     Matching and replacement mutation operator for Integer assignment.
 * \details   This abstract class define is extended from the @see NumericExpression_Base class. 
 */
 
#include "../NumericAssign_Base.h"

class IntegerAssignment: public NumericAssign_Base
{
  protected:
    /**
     * \brief Implement from @see NumericArithBinopAndAssign_Base
     */
    inline bool valTypeMatched(llvm::Type * type)
    {  
        return type->isIntegerTy();
    }
};

#endif //__KLEE_SEMU_GENMU_operatorClasses__IntegerAssignment__
